<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <!--文本来源：http://blog.csdn.net/sunny243788557/article/details/45166397
                  http://www.jianshu.com/p/e09d2370b796-->
    <!-- !!!! Driver Class Path !!!! -->
    <!--<classPathEntry-->
    <!--location="G:\data\.m2\repository\mysql\mysql-connector-java\5.1.41\mysql-connector-java-5.1.41.jar"/>-->
    <context id="context" targetRuntime="MyBatis3">
        <!-- 指定生成的java文件的编码,没有直接生成到项目时中文可能会乱码 -->
        <property name="javaFileEncoding" value="UTF-8"/>

        <!-- 为继承的BaseMapper接口添加对应的实现类 -->
        <plugin type="io.github.sunny.cherry.tomato.generator.mybatis.plugin.InterFaceExtendsPlugin">
            <property name="baseMapper" value="io.github.sunny.cherry.tomato.core.common.mapper.BaseMapper"/>
            <property name="baseModel" value="io.github.sunny.cherry.tomato.core.common.model.BaseModel"/>
        </plugin>

        <!-- Java模型生成equals和hashcode方法
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"/>-->

        <!-- 为生成的Java模型创建一个toString方法
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/> -->

        <!-- mybatis自己的注释 -->
        <commentGenerator type="io.github.sunny.cherry.tomato.generator.MyCommentGenerator">
            <property name="suppressAllComments" value="false"/><!-- 是否取消注释 -->
            <property name="suppressDate" value="false"/><!-- 是否生成注释带时间戳 -->
            <!--<property name="mergeable" value="false"></property>  &lt;!&ndash;覆盖&ndash;&gt;-->
        </commentGenerator>

        <!-- !!!! Database Configurations !!!! -->
        <jdbcConnection
                driverClass="com.mysql.jdbc.Driver"
                connectionURL="jdbc:mysql://127.0.0.1:3306/cherry_tomato?useUnicode=true&amp;characterEncoding=UTF-8"
                userId="root"
                password="root"/>
        <!-- 类型转换 -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 生成实体类地址 -->
        <javaModelGenerator targetPackage="com.sunny.boot.cherrytomato.project.model" targetProject="src/main/java">
            <property name="constructorBased" value="false"/>
            <property name="enableSubPackages" value="true"/>
            <property name="immutable" value="false"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- sql-->
        <sqlMapGenerator targetPackage="com.sunny.boot.cherrytomato.project.mapper.xml" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!--mapper-->
        <javaClientGenerator targetPackage="com.sunny.boot.cherrytomato.project.mapper" targetProject="src/main/java" type="XMLMAPPER">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="org_project" enableCountByExample="false" enableDeleteByExample="false" enableSelectByExample="false"
               enableUpdateByExample="false">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>
    </context>
</generatorConfiguration>