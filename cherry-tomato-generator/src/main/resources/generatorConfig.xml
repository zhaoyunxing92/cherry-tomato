<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <!--文本来源：http://blog.csdn.net/sunny243788557/article/details/45166397
                  http://www.jianshu.com/p/e09d2370b796-->

    <context id="context" targetRuntime="MyBatis3">
        <!-- 指定生成的java文件的编码,没有直接生成到项目时中文可能会乱码 -->
        <property name="javaFileEncoding" value="UTF-8"/>

        <!-- 为继承的BaseMapper接口添加对应的实现类 -->
        <plugin type="io.github.sunny.cherry.tomato.generator.plugin.InterFaceExtendsPlugin">
            <property name="baseMapper" value="io.github.sunny.cherry.tomato.core.common.mapper.BaseMapper"/>
            <property name="baseModel" value="io.github.sunny.cherry.tomato.core.common.model.BaseModel"/>
        </plugin>

        <!-- mybatis自己的注释 -->
        <commentGenerator type="io.github.sunny.cherry.tomato.generator.CherryCommentGenerator">
            <property name="suppressAllComments" value="false"/><!-- 是否取消注释 -->
            <property name="suppressDate" value="false"/><!-- 是否生成注释带时间戳 -->
            <!--<property name="mergeable" value="false"></property>  &lt;!&ndash;覆盖&ndash;&gt;-->
        </commentGenerator>

        <!-- !!!! Database Configurations !!!! -->
        <jdbcConnection
                driverClass="com.mysql.jdbc.Driver"
                connectionURL="jdbc:mysql://127.0.0.1:3306/cherry?useUnicode=true&amp;characterEncoding=UTF-8"
                userId="root"
                password="123456"/>
        <!-- 类型转换 -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 生成实体类地址 -->
        <javaModelGenerator targetPackage="io.github.sunny.cherry.tomato.team.model" targetProject="/home/sunny/code/java/spring-training-hall/cherry-tomato/cherry-tomato-server/cherry-tomato-team/cherry-tomato-team-server/src/main/java">
            <property name="constructorBased" value="false"/>
            <property name="enableSubPackages" value="true"/>
            <property name="immutable" value="false"/>
        </javaModelGenerator>

        <!-- sql-->
        <sqlMapGenerator targetPackage="io.github.sunny.cherry.tomato.team.mapper.xml" targetProject="/home/sunny/code/java/spring-training-hall/cherry-tomato/cherry-tomato-server/cherry-tomato-team/cherry-tomato-team-server/src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!--mapper-->
        <javaClientGenerator targetPackage="io.github.sunny.cherry.tomato.team.mapper" targetProject="/home/sunny/code/java/spring-training-hall/cherry-tomato/cherry-tomato-server/cherry-tomato-team/cherry-tomato-team-server/src/main/java" type="XMLMAPPER">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="cherry_team" enableCountByExample="false" enableDeleteByExample="false" enableSelectByExample="false" enableUpdateByExample="false">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>

        <table tableName="cherry_team_member" enableCountByExample="false" enableDeleteByExample="false" enableSelectByExample="false" enableUpdateByExample="false">
        </table>

    </context>
</generatorConfiguration>